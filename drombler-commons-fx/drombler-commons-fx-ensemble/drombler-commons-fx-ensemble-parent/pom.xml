<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.drombler.fx</groupId>
        <artifactId>drombler-fx-parent</artifactId>
        <version>0.1</version>
        <relativePath />
    </parent>
    <groupId>org.drombler.commons</groupId>
    <artifactId>drombler-commons-fx-ensemble-parent</artifactId>
    <version>0.1</version>
    <packaging>pom</packaging>
 
    <name>Drombler Commons - FX - Ensemble - Parent</name>

    <description>The parent POM of my drombler-commons-fx-ensemble project. This drombler-commons-fx-ensemble Parent POM should be the parent (either directly or indirectly) of every drombler-commons-fx-ensemble project unless there is a good reason to do otherwise (in which case the reason should be documented).</description>
    <url>http://www.mycompany.com/drombler-commons-fx-ensemble</url>
    <inceptionYear>2012</inceptionYear>
    
    <scm>
        <connection>${scm.parent.connection}</connection>
        <developerConnection>${scm.parent.developerConnection}</developerConnection>
        <url>${scm.parent.url}</url>
    </scm>
    
    <licenses>
        <license>
            <name>COMMON DEVELOPMENT AND DISTRIBUTION LICENSE (CDDL) Version 1.0</name>
            <distribution>repo</distribution>
            <!--<url>http://java.sun.com/spl.html</url>-->
            <url>../../../LICENSE.txt</url>
        </license>
    </licenses>
    
    <distributionManagement>
        <site>
            <id>drombler.sourceforge.net</id>
            <name>Drombler Commons</name>
            <url>${distributionManagement.fx.ensemble.parent.url}/${project.artifactId}/</url>
        </site>
    </distributionManagement>   
     
    <properties>   
        <!-- Dev Environment Defaults -->
        <scm.parent.connection>scm:hg:http://hg.code.sf.net/p/drombler/drombler-commons</scm.parent.connection>
        <scm.parent.developerConnection>scm:hg:ssh://${username}@hg.code.sf.net/p/drombler/drombler-commons</scm.parent.developerConnection>
        <scm.parent.url>http://sourceforge.net/p/drombler/drombler-commons</scm.parent.url>
        <distributionManagement.fx.ensemble.parent.url>scp://${username}@shell.sourceforge.net/home/project-web/drombler/htdocs/DromblerCommons/docs/site/${project.version}/drombler-commons-fx/drombler-commons-fx-ensemble</distributionManagement.fx.ensemble.parent.url>

        <!-- Dependency Versions Defaults -->
        <drombler-fx.version>0.1</drombler-fx.version>
    </properties>
    
    <!-- Not inherited!?? -->
    <prerequisites>
        <maven>${maven.version}</maven>
    </prerequisites>
    
    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>2.2</version>
            </extension>
        </extensions>  
        <pluginManagement>
            <plugins>
                <plugin>  
                    <groupId>org.drombler.fx</groupId>
                    <artifactId>drombler-fx-maven-plugin</artifactId>
                    <version>${drombler-fx.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-site-plugin</artifactId>
                    <configuration>
                        <skip>true</skip>
                        <skipDeploy>true</skipDeploy>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.drombler.fx</groupId>
                <artifactId>drombler-fx-core-action</artifactId>
                <version>${drombler-fx.version}</version>
            </dependency>
            <dependency>
                <groupId>org.drombler.fx</groupId>
                <artifactId>drombler-fx-core-application</artifactId>
                <version>${drombler-fx.version}</version>
            </dependency>
            <dependency>
                <groupId>org.drombler.fx</groupId>
                <artifactId>drombler-fx-core-application-locale-de</artifactId>
                <version>${drombler-fx.version}</version>
            </dependency>
            <dependency>
                <groupId>org.drombler.fx</groupId>
                <artifactId>drombler-fx-core-commons</artifactId>
                <version>${drombler-fx.version}</version>
            </dependency>
            <dependency>
                <groupId>org.drombler.fx</groupId>
                <artifactId>drombler-fx-core-docking</artifactId>
                <version>${drombler-fx.version}</version>
            </dependency>
            <dependency>
                <groupId>org.drombler.fx</groupId>
                <artifactId>drombler-fx-locale-all</artifactId>
                <type>pom</type>
                <version>${drombler-fx.version}</version>
            </dependency>
            <dependency>
                <groupId>org.drombler.fx</groupId>
                <artifactId>drombler-fx-locale-de</artifactId>
                <type>pom</type>
                <version>${drombler-fx.version}</version>
            </dependency>
            <dependency>
                <groupId>org.drombler.fx</groupId>
                <artifactId>drombler-fx-startup-main</artifactId>
                <version>${drombler-fx.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>
