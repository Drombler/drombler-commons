<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.drombler</groupId>
        <artifactId>drombler-oss-parent</artifactId>
        <version>1.0</version>
        <relativePath></relativePath>
    </parent>
    <groupId>org.drombler.commons</groupId>
    <artifactId>drombler-commons-parent</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Drombler Commons - Parent</name>
    <inceptionYear>2012</inceptionYear>
    
    <scm>
        <connection>${scm.parent.connection}</connection>
        <developerConnection>${scm.parent.developerConnection}</developerConnection>
        <url>${scm.parent.url}</url>
    </scm>
    
    <licenses>
        <license>
            <name>COMMON DEVELOPMENT AND DISTRIBUTION LICENSE (CDDL) Version 1.0</name>
            <distribution>repo</distribution>
            <!--<url>http://java.sun.com/spl.html</url>-->
            <url>../LICENSE.txt</url>
        </license>
    </licenses>
    
    <distributionManagement>
        <site>
            <id>drombler.sourceforge.net</id>
            <name>Drombler Commons</name>
            <url>${distributionManagement.parent.url}/${project.artifactId}/</url>
        </site>
    </distributionManagement>

    <properties>
        <!-- Dev Environment Defaults -->
        <scm.parent.connection>scm:hg:http://hg.code.sf.net/p/drombler/drombler-commons</scm.parent.connection>
        <scm.parent.developerConnection>scm:hg:ssh://${username}@hg.code.sf.net/p/drombler/drombler-commons</scm.parent.developerConnection>
        <scm.parent.url>http://sourceforge.net/p/drombler/drombler-commons</scm.parent.url>
        <distributionManagement.parent.url>scp://shell.sourceforge.net/home/project-web/drombler/htdocs/DromblerCommons/docs/site/${project.version}</distributionManagement.parent.url>
    </properties>
     
    <!-- Not inherited!?? -->
    <prerequisites>
        <maven>${maven.version}</maven>
    </prerequisites>
    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>2.2</version>
            </extension>
        </extensions>  
        <pluginManagement>
            <plugins>                
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>2.9</version>
                    <configuration>
                        <additionalJOption>-J-Djavafx.javadoc=true</additionalJOption>
                        <!--<additionalparam>-javafx</additionalparam>-->
                        <doclet>com.javafx.tools.doclets.formats.html.HtmlDoclet</doclet>
                        <docletPath>${env.JAVA_HOME}/lib/javafx-doclet.jar</docletPath>
                        <show>private</show>
                        <detectLinks>true</detectLinks>
                        <links>
                            <!-- javadoc link for javax.persistence -->
                            <link>http://docs.oracle.com/javaee/6/api/</link>
                            <link>http://www.softsmithy.org/lib/${dependency.softsmithy.version}/docs/api/softsmithy-lib-core</link>
                            <link>http://threeten.sourceforge.net/apidocs-2011-01-07/</link>
                            <link>http://docs.oracle.com/javafx/2/api/</link>
                        </links>
                        <!--                        <groups>
                            <group>
                                <title>${project.name}</title>
                                <packages>org.drombler.commons*</packages>
                            </group>
                        </groups>-->
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-site-plugin</artifactId>
                    <version>3.2</version>
                    <configuration>
                        <reportPlugins> 
                            <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-project-info-reports-plugin</artifactId>
                                <version>2.6</version>
                            </plugin>
                            <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-javadoc-plugin</artifactId>
                                <version>2.9</version>
                                <reportSets>
                                    <reportSet>
                                        <id>default</id>
                                        <configuration>
                                            <detectOfflineLinks>true</detectOfflineLinks>
                                        </configuration>
                                        <reports>
                                            <report>javadoc</report>
                                        </reports>
                                    </reportSet>
                                    <reportSet>
                                        <id>aggregate</id>
                                        <reports>
                                            <report>aggregate</report>
                                        </reports>
                                    </reportSet>
                                </reportSets>
                                <configuration>
                                    <additionalJOption>-J-Djavafx.javadoc=true</additionalJOption>
                                    <doclet>com.javafx.tools.doclets.formats.html.HtmlDoclet</doclet>
                                    <docletPath>${env.JAVA_HOME}/lib/javafx-doclet.jar</docletPath>
                                    <show>private</show>
                                    <!--<additionalparam>-javafx</additionalparam>-->
                                    <detectLinks>true</detectLinks>
                                    <links>
                                        <!-- javadoc link for javax.persistence -->
                                        <link>http://docs.oracle.com/javaee/6/api/</link>
                                        <link>http://www.softsmithy.org/lib/${dependency.softsmithy.version}/docs/api/softsmithy-lib-core</link>
                                        <link>http://threeten.sourceforge.net/apidocs-2011-01-07/</link>
                                        <link>http://docs.oracle.com/javafx/2/api/</link>
                                    </links>
                                    <!--                        <groups>
                                        <group>
                                            <title>${project.name}</title>
                                            <packages>org.drombler.commons*</packages>
                                        </group>
                                    </groups>-->
                                </configuration>
                            </plugin>
                            <!--                            <plugin>
                                <groupId>org.codehaus.mojo</groupId>
                                <artifactId>cobertura-maven-plugin</artifactId>
                            </plugin>-->
                            <!--                            <plugin>
                                <groupId>org.codehaus.mojo</groupId>
                                <artifactId>taglist-maven-plugin</artifactId>
                            </plugin>-->
                        </reportPlugins>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.felix</groupId>
                <artifactId>org.osgi.core</artifactId>
                <version>1.4.0</version>
            </dependency>
            <dependency>
                <groupId>javax.time</groupId>
                <artifactId>jsr-310-ri</artifactId>
                <version>0.6.3</version>
                <type>jar</type>
                <scope>system</scope>
                <systemPath>${env.JAVAX_TIME_0_6_3_HOME}/jsr-310-ri-0.6.3.jar</systemPath>
            </dependency>
            <dependency>                            
                <groupId>javax.time</groupId>
                <artifactId>jsr-310-TZDB-all</artifactId>
                <version>0.6.3</version>
                <type>jar</type>
                <scope>system</scope>
                <systemPath>${env.JAVAX_TIME_0_6_3_HOME}/jsr-310-TZDB-all-0.6.3.jar</systemPath>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>
